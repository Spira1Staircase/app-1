<h1><strong>Books</strong></h1>
	<table>
	  <tr>
		<th>Title</th>
		<th>Body</th>
	  </tr>
	  <% @books.each do |book| %>
	  <tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
	    <td><%= link_to "Show", book_path(book.id), class: "link" %></td>
	    <td><%= link_to "Edit", edit_book_path(book.id), class: "link" %></td>
	    <td><%= link_to "Destroy", book_path(book.id), method: :delete, data: {confirm: "Are you sure?"}, class: "link" %></td>
	  </tr>
	  <% end %>
	</table>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li>Error<%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

		<h3>New book</h3>

		<%= form_for(@book) do |f| %>
		<div>
		    <h4>Title</h4>
		    <%= f.text_field :title %>
		</div>
		<div>
		    <h4>Body</h4>
		    <%= f.text_area :body %>
		</div>
		<div>
			<%= f.submit 'create Book' %>
		<% end %>
		</div>


